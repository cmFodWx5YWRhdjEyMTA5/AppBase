<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义的ActionBar Style-->
    <style name="CustomActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginRight">0dp</item><!--右边距为0-->
        <item name="android:layout_marginLeft">0dp</item><!--左边距为0-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="opengpsdialogstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>

    <style name="mystyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>

    <style name="myCorDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_title_custom_dialog</item> <!-- 背景透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 没有标题 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 背景模糊 -->
    </style>

</resources>
